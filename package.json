		"babel-loader": "^9.1.2",
		"css-loader": "^6.8.1",
		"eslint": "^8.41.0",
		"eslint-plugin-react": "^7.32.2",
		"html-webpack-plugin": "^5.5.1",
		"husky": "^8.0.3",
		"mini-css-extract-plugin": "^2.7.6",
		"prettier": "2.8.8",
		"style-loader": "^3.3.3",
		"url-loader": "^4.1.1",
		"webpack": "^5.84.1",
		"webpack-cli": "^5.1.1",
		"webpack-dev-server": "^4.15.0"
	},
	"dependencies": {
		"commitizen": "^4.3.0",
