		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.11.2"
	},
	"lint-staged": {
		"*.{js,jsx}": "npm run lint",
		"*.{js,jsx,css,md,html,json}": "npm run format"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
